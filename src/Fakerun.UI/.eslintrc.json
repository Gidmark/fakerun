{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "space-before-function-paren": ["error", "never"],
        "sort-imports": ["error", {
            "ignoreCase": true,
            "ignoreDeclarationSort": true
        }]
    }
}
